<!DOCTYPE html>
<html lang="en" class="no-js">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="alternate" type="application/rss+xml" title="{{ site.title }}" href="{{ site.url }}/feed.xml"/>
    <link rel="icon" href="{{ site.faviconPath }}" type="image/png"/>
    <link rel="manifest" href="../images/site.webmanifest">
    <link rel="icon" type="image/png" sizes="32x32" href="../images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="../images/favicon-16x16.png">
    <link rel="apple-touch-icon" sizes="180x180" href="../images/apple-touch-icon.png">
    {% include "partials/global/meta-info.njk" %}
    <script>
      document
        .documentElement
        .classList
        .remove('no-js');
    </script>
    <style>
      {% include "assets/css/global.css" %}
    </style>
    {% block head %}{% endblock %}
  </head>
  <body>

    {# Intro content #}
    {% set introHeading = title %}

    {# Post list content #}
    {% set postListHeading = postsHeading %}
    {% set postListItems = collections.postFeed %}
    
    {% block content %}
    <main id="main-content" tabindex="-1">
        <article class="[ post ] [ h-entry ]">
        {% include "partials/components/intro.njk" %}
        <div class="[ post__body ] [ inner-wrapper ] [ leading-loose pad-top-900 pad-bottom-900 text-500 ] [ sf-flow ] [ e-content ]">
            {{ content | safe }}
        </div>
        </article>
        <h4> Latest Posts </h4>
        {% include "partials/components/post-list.njk" %}
    </main>
    {% endblock content %}
    {% set pageType = 'Page' %}
    {% include "partials/global/site-foot.njk" %}
    {% block foot %}{% endblock %}
    <script type="module" src="/js/components/theme-toggle.js" async="async" defer="defer"></script>
    <script>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator
            .serviceWorker
            .register('/service-worker.js');
        });
      }
    </script>
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js" async="async" defer="defer"></script>
    <script data-goatcounter="https://zblog.goatcounter.com/count" async="async" src="//gc.zgo.at/count.js"></script>
  </body>
</html>