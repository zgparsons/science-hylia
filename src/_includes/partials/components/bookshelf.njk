<div class="wrapper">
    <ul class="auto-grid">
    {% for book in bookshelf %}
        <li>
            {% if '/nophoto/' in book.image_url %}
            <p><img class="book-cover" src="/images/book-covers/{{ book.spinal_title }}.jpg" alt=""></p>
            {% else %}
            <p><img class="book-cover" src={{book.image_url}} alt=""></p>
            {% endif %}
            <p class="text-300">{{book.title}}</p>
            <p class="text-300">{{book.author}}</p>
            <p><a href={{book.link}}>Link</a></p>
            <p class="text-500">Rating: {{book.rating}}</p>
        </li>
    {% endfor %}
    </ul>
</div>